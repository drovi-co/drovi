# Porter Environment Variables
# Copy this to .env and fill in your values

# =============================================================================
# LLM API Keys
# =============================================================================
TOGETHER_API_KEY=your-together-api-key
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# Internal Service Token
# Generate with: openssl rand -hex 32
# =============================================================================
DROVI_INTERNAL_SERVICE_TOKEN=your-internal-service-token

# =============================================================================
# Database (auto-populated by Porter RDS addon)
# =============================================================================
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# =============================================================================
# Redis (auto-populated by Porter ElastiCache addon)
# =============================================================================
# REDIS_URL=redis://host:6379/0

# =============================================================================
# Kafka (auto-populated by Porter MSK addon)
# =============================================================================
KAFKA_ENABLED=true
# KAFKA_BOOTSTRAP_SERVERS=broker1:9092,broker2:9092,broker3:9092
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=SCRAM-SHA-512
# KAFKA_SASL_USERNAME=auto-populated
# KAFKA_SASL_PASSWORD=auto-populated

# =============================================================================
# FalkorDB (internal service)
# =============================================================================
FALKORDB_HOST=falkordb
FALKORDB_PORT=6379

# =============================================================================
# Application Config
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
CORS_ORIGINS=["https://drovi.app","https://app.drovi.app"]

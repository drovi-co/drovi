{
  "title": "Drovi Intelligence Overview",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "API Latency p95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(drovi_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 8,
        "h": 7
      }
    },
    {
      "type": "timeseries",
      "title": "API 5xx Rate",
      "targets": [
        {
          "expr": "sum(rate(drovi_http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(drovi_http_requests_total[5m]))",
          "legendFormat": "5xx rate"
        }
      ],
      "gridPos": {
        "x": 8,
        "y": 0,
        "w": 8,
        "h": 7
      }
    },
    {
      "type": "timeseries",
      "title": "Pipeline Lag p95 (Ingest -> Extract)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(drovi_pipeline_end_to_end_lag_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "gridPos": {
        "x": 16,
        "y": 0,
        "w": 8,
        "h": 7
      }
    },
    {
      "type": "timeseries",
      "title": "Extraction Success Rate",
      "targets": [
        {
          "expr": "sum(rate(drovi_extractions_total{status=\"ok\"}[5m])) / sum(rate(drovi_extractions_total[5m]))",
          "legendFormat": "success rate"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 7,
        "w": 8,
        "h": 7
      }
    },
    {
      "type": "timeseries",
      "title": "Extraction Duration p95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(drovi_extraction_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "gridPos": {
        "x": 8,
        "y": 7,
        "w": 8,
        "h": 7
      }
    },
    {
      "type": "timeseries",
      "title": "Time to First Data p95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(drovi_connector_time_to_first_data_seconds_bucket[6h])) by (le, connector_type))",
          "legendFormat": "{{connector_type}}"
        }
      ],
      "gridPos": {
        "x": 16,
        "y": 7,
        "w": 8,
        "h": 7
      }
    },
    {
      "type": "timeseries",
      "title": "Backfill Throughput (records/s)",
      "targets": [
        {
          "expr": "sum(rate(drovi_records_synced_total[5m])) by (connector_type)",
          "legendFormat": "{{connector_type}}"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 14,
        "w": 8,
        "h": 7
      }
    },
    {
      "type": "timeseries",
      "title": "Connector Freshness (s since last success)",
      "targets": [
        {
          "expr": "time() - drovi_connector_last_success_timestamp_seconds",
          "legendFormat": "{{connector_type}}"
        }
      ],
      "gridPos": {
        "x": 8,
        "y": 14,
        "w": 8,
        "h": 7
      }
    },
    {
      "type": "timeseries",
      "title": "Kafka Consumer Lag",
      "targets": [
        {
          "expr": "max by (topic, partition) (drovi_kafka_consumer_lag)",
          "legendFormat": "{{topic}}-{{partition}}"
        }
      ],
      "gridPos": {
        "x": 16,
        "y": 14,
        "w": 8,
        "h": 7
      }
    },
    {
      "type": "timeseries",
      "title": "Kafka Queue Depth",
      "targets": [
        {
          "expr": "drovi_kafka_consumer_queue_depth",
          "legendFormat": "{{group_id}}"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 21,
        "w": 8,
        "h": 7
      }
    },
    {
      "type": "timeseries",
      "title": "LLM Error Rate",
      "targets": [
        {
          "expr": "sum(rate(drovi_llm_requests_total{status=\"error\"}[5m])) / sum(rate(drovi_llm_requests_total[5m]))",
          "legendFormat": "error rate"
        }
      ],
      "gridPos": {
        "x": 8,
        "y": 21,
        "w": 8,
        "h": 7
      }
    },
    {
      "type": "timeseries",
      "title": "UEM Persist p95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(drovi_uem_persist_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "gridPos": {
        "x": 16,
        "y": 21,
        "w": 8,
        "h": 7
      }
    },
    {
      "type": "timeseries",
      "title": "Evidence Completeness",
      "targets": [
        {
          "expr": "sum(rate(drovi_evidence_completeness_total{status=\"present\"}[5m])) by (uio_type) / sum(rate(drovi_evidence_completeness_total[5m])) by (uio_type)",
          "legendFormat": "{{uio_type}}"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 28,
        "w": 24,
        "h": 8
      }
    }
  ]
}

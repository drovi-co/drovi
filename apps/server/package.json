    "@hono/trpc-server": "^0.4.0",
    "@memorystack/ai": "workspace:*",
    "@memorystack/api": "workspace:*",
    "@memorystack/auth": "workspace:*",
    "@memorystack/db": "workspace:*",
    "@memorystack/email": "workspace:*",
    "@memorystack/env": "workspace:*",
    "@react-email/render": "^1.0.0",
    "@trigger.dev/sdk": "4.3.2",
    "@trpc/server": "catalog:",
    "ai": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.8.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "posthog-node": "^5.23.0",
    "resend": "^4.2.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@memorystack/config": "workspace:*",
    "@trigger.dev/build": "^4.3.2",
    "@types/bun": "catalog:",
    "@types/ioredis": "^5.0.0",
    "tsdown": "^0.16.5",
    "typescript": "catalog:"
  }
